{
  "name": "@pragmaproducts/build-utilities-commandline",
  "version": "1.0.1",
  "main": "index.js",
  "scripts": {
    "build": "node ./index.js -c source",
    "test": "nyc mocha --compilers js:babel-core/register --recursive",
    "minify": "uglifyjs --compress --mangle --source-map content='/app/sourcemaps/source.map' app/src/**.*.js"
  },
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.24.1",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "chai": "^3.5.0",
    "commander": "^2.9.0",
    "del": "^2.2.2",
    "glob": "^7.1.2",
    "istanbul": "^0.4.5",
    "mkdirp": "^0.5.1",
    "mocha": "^3.4.2",
    "npm-bump": "0.0.20",
    "nyc": "^10.3.2",
    "prompt": "^1.0.0",
    "proxyquire": "^1.8.0",
    "sinon": "^2.3.1",
    "uglify-js": "^3.0.15"
  },
  "nyc": {
    "check-coverage": true,
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "app/**/*.*",
      "node_modules/**/*.*",
      "jspm_packages/**/*.*"
    ],
    "cache": true,
    "all": true
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "bin": {
    "pbuc": "index.js"
  }
}
