{
    "name": "build-utilities-commandline",
    "version": "1.0.41",
    "main": "commonjs/index.js",
    "scripts": {
        "build": "node ./index.js -c source",
        "package": "node ./index.js -p",
        "test": "nyc mocha --compilers js:babel-core/register --recursive"
    },
    "license": "ISC",
    "dependencies": {
        "babel-core": "^6.24.1",
        "babel-preset-latest": "^6.24.1",
        "commander": "^2.9.0",
        "del": "^2.2.2",
        "glob": "^7.1.2",
        "mkdirp": "^0.5.1",
        "prompt": "^1.0.0",
        "proxyquire": "^1.8.0"
    },
    "devDependencies": {
        "babel-plugin-istanbul": "^4.1.3",
        "aurelia-event-aggregator": "^1.0.1",
        "aurelia-framework": "^1.1.2",
        "aurelia-pal-nodejs": "^1.0.0-beta.1.0.0",
        "aurelia-polyfills": "^1.2.1",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "chai": "^3.5.0",
        "istanbul": "^0.4.5",
        "mocha": "^3.4.2",
        "nyc": "^10.3.2",
        "sinon": "^2.3.1"
    },
    "nyc": {
        "check-coverage": true,
        "require": [
            "babel-register"
        ],
        "reporter": [
            "lcov",
            "text-summary"
        ],
        "include": [
            "src/**/*.js"
        ],
        "exclude": [
            "app/**/*.*",
            "node_modules/**/*.*",
            "jspm_packages/**/*.*"
        ],
        "cache": true,
        "all": true
    },
    "babel": {
        "presets": [
            "latest"
        ],
        "plugins": [
            "transform-decorators-legacy",
            "transform-class-properties"
        ]
    },
    "bin": {
        "bucli": "commonjs/index.js"
    }
}