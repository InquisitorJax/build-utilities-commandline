{
    "name": "build-utilities-commandline",
    "version": "1.0.25",
    "main": "commonjs/index.js",
    "scripts": {
        "build": "node ./index.js -c source",
        "package": "node ./index.js -p",
        "test": "nyc mocha --compilers js:babel-core/register --recursive",
        "minify": "uglifyjs --compress --mangle --source-map content='/app/sourcemaps/source.map' app/src/**.*.js"
    },
    "license": "ISC",
    "dependencies": {
        "commander": "^2.9.0",
        "del": "^2.2.2",
        "glob": "^7.1.2",
        "mkdirp": "^0.5.1",
        "prompt": "^1.0.0",
        "proxyquire": "^1.8.0",
        "uglify-js": "^3.0.15",
        "babel-core": "^6.24.1",
        "babel-plugin-istanbul": "^4.1.3",
        "babel-preset-env": "^1.5.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-3": "^6.24.1"
    },
    "devDependencies": {
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "chai": "^3.5.0",
        "istanbul": "^0.4.5",
        "mocha": "^3.4.2",
        "nyc": "^10.3.2",
        "sinon": "^2.3.1"
    },
    "nyc": {
        "check-coverage": true,
        "require": [
            "babel-register"
        ],
        "reporter": [
            "lcov",
            "text-summary"
        ],
        "include": [
            "src/**/*.js"
        ],
        "exclude": [
            "app/**/*.*",
            "node_modules/**/*.*",
            "jspm_packages/**/*.*"
        ],
        "cache": true,
        "all": true
    },
    "babel": {
        "presets": [
            "es2015"
        ],
        "plugins": [
            "transform-decorators-legacy"
        ]
    },
    "bin": {
        "pbuc": "commonjs/index.js"
    }
}
